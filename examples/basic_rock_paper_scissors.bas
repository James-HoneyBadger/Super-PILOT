10 PRINT "Rock, Paper, Scissors!"
20 PRINT "Choose: 1=Rock, 2=Paper, 3=Scissors"
30 INPUT CHOICE
40 IF CHOICE < 1 THEN 20
50 IF CHOICE > 3 THEN 20
60 LET COMPUTER = int(rand()*3)+1
70 PRINT "You chose:", CHOICE
80 PRINT "Computer chose:", COMPUTER
90 IF CHOICE = COMPUTER THEN 200
100 IF CHOICE = 1 AND COMPUTER = 3 THEN 220
110 IF CHOICE = 2 AND COMPUTER = 1 THEN 220
120 IF CHOICE = 3 AND COMPUTER = 2 THEN 220
130 PRINT "Computer wins!"
140 GOTO 240
200 PRINT "It's a tie!"
210 GOTO 240
220 PRINT "You win!"
240 PRINT "Play again? 1=Yes, 0=No"
250 INPUT AGAIN
260 IF AGAIN = 1 THEN 20
270 PRINT "Thanks for playing!"
280 END
