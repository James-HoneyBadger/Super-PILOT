REM Step 3: Procedures
1200 PRINT "=== Step 3: Writing Procedures ==="
PRINT
PRINT "Procedures let you reuse code and create functions."
PRINT
PRINT "Procedure syntax:"
PRINT "TO procedurename :input1 :input2"
PRINT "  commands using :input1 and :input2"
PRINT "END"
PRINT
PRINT "Example: Square procedure"
PRINT "TO SQUARE :size"
PRINT "  REPEAT 4 [FORWARD :size RIGHT 90]"
PRINT "END"
PRINT
PRINT "Using the procedure:"
PRINT "SQUARE 100"
PRINT "SQUARE 50"
PRINT
PRINT "Flower procedure:"
PRINT "TO FLOWER :petals :size"
PRINT "  REPEAT :petals ["
PRINT "    FORWARD :size"
PRINT "    RIGHT 360 / :petals"
PRINT "  ]"
PRINT "END"
PRINT
PRINT "FLOWER 8 50"
PRINT
RETURN

REM Step 4: Complex Shapes
1300 PRINT "=== Step 4: Complex Geometric Shapes ==="
PRINT
PRINT "Create intricate shapes using math and loops."
PRINT
PRINT "Star procedure:"
PRINT "TO STAR :points :size"
PRINT "  REPEAT :points ["
PRINT "    FORWARD :size"
PRINT "    RIGHT 180 - (180 / :points)"
PRINT "  ]"
PRINT "END"
PRINT
PRINT "STAR 5 100  (5-pointed star)"
PRINT "STAR 7 80   (7-pointed star)"
PRINT
PRINT "Polygon with any number of sides:"
PRINT "TO POLYGON :sides :size"
PRINT "  REPEAT :sides ["
PRINT "    FORWARD :size"
PRINT "    RIGHT 360 / :sides"
PRINT "  ]"
PRINT "END"
PRINT
PRINT "POLYGON 6 50  (hexagon)"
PRINT "POLYGON 12 30 (dodecagon)"
PRINT
PRINT "Spiral procedure:"
PRINT "TO SPIRAL :turns :step"
PRINT "  REPEAT :turns * 360 ["
PRINT "    FORWARD REPCOUNT * :step / 360"
PRINT "    RIGHT 1"
PRINT "  ]"
PRINT "END"
PRINT
PRINT "SPIRAL 3 2"
PRINT
RETURN

REM Step 5: Art Patterns
1400 PRINT "=== Step 5: Mathematical Art Patterns ==="
PRINT
PRINT "Use mathematics to create beautiful patterns."
PRINT
PRINT "Sine wave pattern:"
PRINT "TO SINEWAVE :amplitude :frequency :length"
PRINT "  REPEAT :length ["
PRINT "    SETX REPCOUNT"
PRINT "    SETY SIN(REPCOUNT * :frequency) * :amplitude"
PRINT "    IF REPCOUNT = 1 THEN PENDOWN"
PRINT "  ]"
PRINT "END"
PRINT
PRINT "SETX and SETY - position turtle at coordinates"
PRINT "SIN() - sine function for smooth curves"
PRINT
PRINT "Fractal tree:"
PRINT "TO TREE :size"
PRINT "  IF :size < 5 THEN STOP"
PRINT "  FORWARD :size"
PRINT "  RIGHT 30"
PRINT "  TREE :size * 0.7"
PRINT "  LEFT 60"
PRINT "  TREE :size * 0.7"
PRINT "  RIGHT 30"
PRINT "  BACK :size"
PRINT "END"
PRINT
PRINT "PENUP SETY -200 PENDOWN TREE 100"
PRINT
PRINT "Recursive procedures call themselves!"
PRINT
RETURN

