T:=== BASIC PROGRAMMING ===
LET A = 10
LET B = 20
PRINT "BASIC: A =", A, "B =", B
LET PRODUCT = A * B
PRINT "Product:", PRODUCT
T:
INPUT "Enter a number for factorial calculation: "; FACTORIAL_NUM
LET FACT_RESULT = 1
FOR I = 1 TO FACTORIAL_NUM
LET FACT_RESULT = FACT_RESULT * I
NEXT I
PRINT "Factorial of", FACTORIAL_NUM, "is", FACT_RESULT
T:
T:=== ADVANCED CONTROL FLOW ===
LET TEST_NUM = 7
IF TEST_NUM > 5 THEN PRINT "Number is greater than 5"
IF TEST_NUM < 10 THEN PRINT "Number is less than 10"
T:
T:=== SUBROUTINES ===
GOSUB DRAW_BOX
T:Back from subroutine!
T:
T:=== LOGO GRAPHICS DEMO ===
T:Now let's create some amazing graphics!
T:Watch the Logo turtle draw patterns...
T:
T:Drawing a colorful spiral...
SETX 0
SETY 0
PENCOLOR red
PENSIZE 2
REPEAT 8 [
  REPEAT 4 [
    FORWARD 50
    RIGHT 90
  ]
  RIGHT 45
  SETCOLOR 1 + REPCOUNT
]
T:
