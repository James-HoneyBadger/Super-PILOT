  REPEAT 4 [
    FORWARD 60
    RIGHT 90
  ]
  PENUP
  FORWARD 20
  RIGHT 90
  FORWARD 40
  PENDOWN
  REPEAT 3 [
    FORWARD 20
    RIGHT 120
  ]
END

